<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/display_form_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/delete_and_download"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/display_form_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/display_form_title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Music"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/display_form_desc_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="TextView TextView TextView TextView TextView TextView TextView TextView TextView TextView TextView TextView TextView TextView TextView TextView TextView TextView TextView "
                android:textSize="15dp"
                android:textStyle="italic"
                android:textAlignment="gravity"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scrollView2" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/delete_and_download"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/display_form_download"
            android:backgroundTint="@android:color/holo_blue_light"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:tag="submit_button"
            android:text="Download Results"
            android:textAlignment="center"
            android:gravity="center"
            tools:layout_editor_absoluteX="66dp" />

        <Button
            android:id="@+id/display_form_delete"
            android:backgroundTint="@android:color/holo_red_light"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:tag="submit_button"
            android:text="Delete"
            android:textAlignment="center"
            android:gravity="center"
            tools:layout_editor_absoluteX="66dp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>